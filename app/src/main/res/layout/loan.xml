<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/bankNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginVertical="10dp"
                    android:text="Ренессанс Кредит"
                    android:textSize="16sp"
                    android:textColor="@color/labelColor"
                    android:fontFamily="@font/ubuntu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/starImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star"
                    android:layout_marginVertical="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/markTextView" />

                <TextView
                    android:id="@+id/markTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center"
                    android:text="4.5"
                    android:textColor="@color/labelColor"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@id/starImageView"
                    app:layout_constraintBottom_toBottomOf="@id/starImageView"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/rangeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center"
                    android:text="от 20 000 до 300 000 руб."
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/bankNameTextView"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/line"
                    app:layout_constraintTop_toBottomOf="@id/rangeTextView"/>

                <TextView
                    android:id="@+id/rateLabelTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="Ставка"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/timeLabelTextView"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/rateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center"
                    android:text="от 0,95% в день"
                    android:textColor="@color/labelColor"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rateLabelTextView"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/timeLabelTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/ubuntu"
                    android:text="Срок"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/rateLabelTextView"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center"
                    android:text="от 7 до 30 дней"
                    android:textColor="@color/labelColor"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/timeLabelTextView"
                    app:layout_constraintTop_toBottomOf="@id/rateLabelTextView"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/methodsOfObtainingLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center"
                    android:text="Способы получения"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rateTextView"
                    android:layout_marginTop="20dp" />

                <ImageView
                    android:id="@+id/methodsOfObtainingImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/methods_of_obtaining"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/methodsOfObtainingLabelTextView"/>

                <ImageView
                    android:id="@+id/bankLogoImageView"
                    android:layout_width="210dp"
                    android:layout_height="128dp"
                    android:background="@drawable/renaissance_credit_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginVertical="10dp"
                    app:layout_constraintTop_toBottomOf="@id/methodsOfObtainingImageView" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detailsConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/bankLogoImageView">

                    <TextView
                        android:id="@+id/documentsLabelTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="Документы"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/scheduleLabelTextView"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/documentsTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="Паспорт, телефон"
                        android:textColor="@color/labelColor"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@id/scheduleTextView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/documentsLabelTextView"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/scheduleLabelTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="График работы"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/documentsLabelTextView"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/scheduleTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="от 7 до 30 дней"
                        android:textColor="@color/labelColor"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/documentsTextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scheduleLabelTextView"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/ageLabelTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="Возраст"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/documentsTextView"
                        app:layout_constraintEnd_toStartOf="@id/considerationLabelTextView"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/ageTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="От 21 до 65 лет"
                        android:textColor="@color/labelColor"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@id/considerationTextView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ageLabelTextView"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/considerationLabelTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="Рассмотрение"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ageLabelTextView"
                        app:layout_constraintTop_toBottomOf="@id/scheduleTextView"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/considerationTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="до 15 минут"
                        android:textColor="@color/labelColor"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/ageTextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/considerationLabelTextView"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/contractLabelTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="Лицензионное соглашение"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ageTextView"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/contractTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/ubuntu"
                        android:text="№1092378091230835 от 29.08.2013"
                        android:textColor="@color/labelColor"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/contractLabelTextView"
                        android:layout_marginTop="10dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageButton
                    android:id="@+id/detailsImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailsConstraintLayout"/>

                <ImageButton
                    android:id="@+id/checkoutImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="29dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/checkout"
                    app:layout_constraintEnd_toStartOf="@id/favouriteImageButton"
                    app:layout_constraintTop_toBottomOf="@id/detailsConstraintLayout"/>

                <ImageButton
                    android:id="@+id/favouriteImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/favourite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailsConstraintLayout"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>